{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.json",
    "assets": [
      "**/*.proto"
    ],
    "watchAssets": true,
    "builder": "tsc",
    "typeCheck": true,
    "plugins": [
      "@nestjs/swagger"
    ]
  }
}